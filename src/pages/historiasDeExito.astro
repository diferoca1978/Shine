---
import MainLayout from "@/layout/MainLayout.astro";
import { generateBreadcrumbSchema } from "@/config/seo";

const breadcrumbSchema = generateBreadcrumbSchema([
    { name: "Inicio", url: "/" },
    { name: "Historias de Éxito", url: "/historiasDeExito" },
]);
---

<MainLayout
    title="Historias de Éxito"
    description="Explora nuestros casos de éxito y proyectos de transformación digital que reflejan autenticidad y propósito."
    path="/historiasDeExito"
    aditionalSchemas={[breadcrumbSchema]}
>
    <h1>Historias de Éxito</h1>
</MainLayout>
