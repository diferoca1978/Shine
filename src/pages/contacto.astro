---
import MainLayout from "@/layout/MainLayout.astro";
import { generateBreadcrumbSchema, generatePageSEO } from "@/config/seo";
import ContactForm from "@/components/ui/ContactForm.astro";
import Star from "@/assets/icons/star40x40.svg";
import Rocket from "@/assets/images/rocket.webp";
import { Image } from "astro:assets";

const breadcrumbSchema = generateBreadcrumbSchema([
    { name: "Inicio", url: "/" },
    { name: "Contacto", url: "/contacto" },
]);

const contactoSEO = generatePageSEO({
    title: "Contacto - Shine Agencia Digital",
    description:
        "Contáctanos para discutir cómo podemos ayudarte a transformar tu presencia digital con autenticidad y propósito. Respuesta garantizada en 24 horas.",
    path: "/contacto",
});
---

<MainLayout seoProps={contactoSEO} aditionalSchemas={[breadcrumbSchema]}>
    <section class="contact-section w-full mx-auto">
        <div class="text-center mx-auto py-10 lg:py-20">
            <h1 class="text-6xl font-playfair font-bold text-smokyBlack mb-8">
                Contacto
            </h1>
        </div>
        <div
            class="flex flex-col md:flex-row items-center justify-center max-w-6xl mx-auto gap-8"
        >
            <div class="md:w-1/2">
                <div
                    class="relative items-center justify-center hidden lg:flex"
                >
                    <!-- Random positioned stars -->
                    <Star class="absolute top-16 left-20 animate-pulse" />
                    <Star
                        class="absolute top-32 right-16 animate-pulse delay-300"
                    />
                    <Star
                        class="absolute bottom-24 left-12 animate-pulse delay-700"
                    />
                    <Star
                        class="absolute bottom-16 right-24 animate-pulse delay-500"
                    />
                    <Star
                        class="absolute bottom-32 right-12 animate-pulse delay-400"
                    />

                    <!-- Rocket -->
                    <Image
                        id="rocket"
                        src={Rocket}
                        alt="Rocket"
                        height={350}
                        width={350}
                        class="relative z-10"
                    />
                </div>
            </div>
            <div class="md:w-1/2">
                <ContactForm />
            </div>
        </div>
    </section>
</MainLayout>

