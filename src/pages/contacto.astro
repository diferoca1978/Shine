---
import MainLayout from "@/layout/MainLayout.astro";
import { generateBreadcrumbSchema, generatePageSEO } from "@/config/seo";
import ContactForm from "@/components/ui/ContactForm.astro";
import PencilStarsBackground from "@/components/ui/Pencilstartsbg.astro";

const breadcrumbSchema = generateBreadcrumbSchema([
    { name: "Inicio", url: "/" },
    { name: "Contacto", url: "/contacto" },
]);

const contactoSEO = generatePageSEO({
    title: "Contacto - Shine Agencia Digital",
    description:
        "Contáctanos para discutir cómo podemos ayudarte a transformar tu presencia digital con autenticidad y propósito. Respuesta garantizada en 24 horas.",
    path: "/contacto",
});
---

<MainLayout seoProps={contactoSEO} aditionalSchemas={[breadcrumbSchema]}>
    <section class="contact-section w-full mx-auto">
        <div class="text-center mx-auto py-10 lg:py-20">
            <h1
                class="text-6xl font-playfair font-extrabold text-smokyBlack mb-8"
            >
                Contacto
            </h1>
        </div>
        <div
            class="flex flex-col md:flex-row items-center justify-center max-w-6xl mx-auto gap-8"
        >
            <div class="md:w-1/2"></div>
            <div class="md:w-1/2">
                <ContactForm />
            </div>
        </div>
    </section>
</MainLayout>
