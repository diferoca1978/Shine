---
import MainLayout from "@/layout/MainLayout.astro";
import HeroAbout from "@/components/section/perPage/HeroAbout.astro";
import AboutFoundations from "@/components/section/perPage/aboutFoundations.astro";
import AboutMission from "@/components/section/perPage/aboutMission.astro";
import CTABanner from "@/components/ui/CTABanner.astro";
import { generateBreadcrumbSchema } from "@/config/seo";

const breadcrumbSchema = generateBreadcrumbSchema([
    { name: "Inicio", url: "/" },
    { name: "Nosotros", url: "/nosotros" },
]);
---

<MainLayout
    title="Nosotros"
    description="Conoce el equipo detrás de Shine y nuestra misión de transformar presencias digitales con autenticidad y propósito."
    path="/nosotros"
    aditionalSchemas={[breadcrumbSchema]}
>
    <HeroAbout />
    <AboutMission />
    <AboutFoundations />
    <CTABanner
        title="¡Transforma tu Negocio Digital!"
        description="Descubre cómo Shine puede ayudarte a crecer con autenticidad y propósito."
        buttonText="Solicita tu diagnóstico gratuito"
        buttonHref="/contacto"
        variant="default"
        className="max-w-6xl mx-auto"
    />
</MainLayout>
