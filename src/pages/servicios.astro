---
import MainLayout from "@/layouts/MainLayout.astro";
import Services from "@/components/section/perPage/Services.astro";
import GlobalHero from "@/components/global/GlobalHero.astro";
import { generateBreadcrumbSchema, generatePageSEO } from "@/config/seo";
import Button from "@/components/ui/button.astro";
import StarIcon from "@/assets/icons/star40x40.svg";

const breadcrumbs = [
  { name: "Inicio", url: "/" },
  { name: "Servicios", url: "/servicios" },
];

const serviciosSEO = generatePageSEO({
  title: "Servicios de Marketing Digital y Diseño Web Estratégico",
  description:
    "Descubre nuestros servicios especializados: diseño web estratégico, rediseño web, auditoría digital, estrategia de contenido y optimización de canales digitales para profesionales auténticos.",
  path: "/servicios",
});

const breadcrumbSchema = generateBreadcrumbSchema(breadcrumbs);
---

<MainLayout seoProps={serviciosSEO} aditionalSchemas={[breadcrumbSchema]}>
  <GlobalHero
    titleLine1="Su visión,"
    titleLine2="Nuestra estrategia."
    subtitleBefore="Convertimos sus desafíos de"
    subtitleHighlight="marketing y tecnología"
    subtitleAfter="en oportunidades de crecimiento."
  />

  <Services />
</MainLayout>
