---
import { Image } from "astro:assets";

interface Props {
  slug: string;
  image: any;
  alt: string;
  title: string;
  description: string;
  tags: string[];
}

const { slug, image, alt, title, description, tags } = Astro.props;
---

<div
  class="service-card border border-smokyBlack/20 rounded-2xl p-1 h-full transition-all duration-300"
>
  <a
    href={`/servicios/${slug}`}
    class="content-card bg-softBeige rounded-2xl p-4 h-full flex flex-col grayscale hover:-translate-y-2 hover:-translate-x-2 hover:shadow-smokyBlack/30 hover:shadow-2xl transition-all duration-300"
  >
    <div class="flex-shrink-0">
      <Image
        src={image}
        alt={alt}
        class="img w-full h-[20rem] rounded-md object-cover lg:rounded-lg hover:scale-105 transition-all duration-300"
      />
    </div>
    <div class="flex-1 flex flex-col justify-between p-4 min-h-0">
      <div class="space-y-3">
        <div class="flex gap-4 flex-wrap min-h-[2rem] items-center">
          {
            tags.map((tag) => (
              <span class="tags rounded-2xl bg-accentGold px-2 text-sm">
                {tag}
              </span>
            ))
          }
        </div>
        <h1 class="text-lg font-semibold line-clamp-2">{title}</h1>
      </div>
      <p
        class="description font-openSans text-sm text-deepplum mt-2 line-clamp-3"
      >
        {description}
      </p>
    </div>
  </a>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const contentCards = document.querySelectorAll(".content-card");

    contentCards.forEach((card) => {
      const description = card.querySelector(".description");

      card.addEventListener("mouseover", () => {
        card.classList.remove("grayscale");
        if (description) {
          description.classList.add("font-semibold");
        }
      });

      card.addEventListener("mouseout", () => {
        card.classList.add("grayscale");
        if (description) {
          description.classList.remove("font-semibold");
        }
      });
    });
  });
</script>
