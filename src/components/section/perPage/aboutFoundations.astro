---
const foundations = [
  {
    title: "Autenticidad",
  },
  {
    title: "Propósito",
  },
  {
    title: "Servicio con valor",
  },
  {
    title: "Crecimiento en unidad",
  },
  {
    title: "Generosidad estratégica",
  },
];
---

<section id="foundations" class="w-full mx-auto">
  <div class="max-w-6xl mx-auto py-5 lg:py-10">
    <div class="hero-foundations flex flex-col items-center justify-center">
      <h1
        class="text-[min(10vw,72px)] opacity-0 font-playfair font-bold text-smokyBlack tracking-tight mb-4"
      >
        Nuestros Principios
      </h1>
      <span class="text-rotator">
        {
          foundations.map((foundation) => (
            <span class="font-playfair text-smokyBlack text-[min(7vw,42px)] italic">
              {foundation.title}
            </span>
          ))
        }
      </span>
    </div>
  </div>
</section>

<style>
  .text-rotator {
    position: relative;
    display: inline-block;
    line-height: 1.1;
    height: 6rem;
    overflow: hidden;
    width: 100%;
    text-align: center;
  }

  .text-rotator > span {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    white-space: nowrap;
    height: 6rem;
    width: max-content;
    visibility: hidden;
  }

  .text-rotator.loaded > span {
    visibility: visible;
  }
</style>

<script>
  import { foundationsRotatorAnimation } from "@/utils/scripts/aboutFoundationsAnimation";

  document.removeEventListener("DOMContentLoaded", foundationsRotatorAnimation);
  document.addEventListener("DOMContentLoaded", foundationsRotatorAnimation);
</script>
