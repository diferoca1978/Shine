---
import WebDesing from "@/assets/images/diseñoyrediseñoweb.webp";
import ReDesing from "@/assets/images/Rediseñopaginaweb.webp";
import Auditoria from "@/assets/images/auditoriadigital.webp";
import SocialContent from "@/assets/images/redessociales.webp";
import Optimizacion from "@/assets/images/optimizaciondecanales.webp";
import { Image } from "astro:assets";
import Hero from "../landing/Hero.astro";

const services = [
  {
    title: "Diseño Web Estratégico",
    subtitle: "Convierte tu web en una herramienta que trabaja por ti",
    problem: "¿Sientes que tu web no refleja la calidad de tu trabajo?",
    content:
      "Creamos sitios web estratégicos centrados en el usuario, con flujos claros y optimizados para buscadores y conversiones.",
    benefits: [
      "Experiencia de usuario intuitiva",
      "Arquitectura de información clara",
      "SEO técnico avanzado",
      "Diseño profesional y coherente",
    ],
    image: WebDesing,
    alt: "diseño web estratégico",
  },
  {
    title: "Rediseño y Optimización Web",
    subtitle: "Renueva tu presencia digital y multiplica tus resultados",
    problem: "Un sitio desactualizado puede frenar tu crecimiento.",
    content:
      "Rediseñamos y optimizamos tu web para ofrecer una experiencia de navegación actual, profesional y efectiva.",
    image: ReDesing,
    alt: "rediseño web",
  },
  {
    title: "Auditoría de Marketing Digital",
    subtitle: "Descubre dónde mejorar desde el primer mes",
    problem: "¿No sabes qué funciona y qué no?",
    content:
      "Analizamos tus canales digitales y entregamos un plan de acción claro para optimizar resultados inmediatos.",
    image: Auditoria,
    alt: "auditoria marketing digital",
  },
  {
    title: "Estrategia de Contenido para Redes Sociales",
    subtitle: "Contenido auténtico que conecta con tu audiencia",
    problem: "Crear contenido puede sentirse forzado o agotador.",
    content:
      "Diseñamos un plan estratégico adaptado a tu voz, para generar autoridad sin sacrificar tu esencia.",
    benefits: [
      "Calendario editorial adaptado",
      "Mensajes alineados a tus valores",
      "Mayor conexión emocional",
    ],
    image: SocialContent,
    alt: "contenido para redes sociales",
  },
  {
    title: "Optimización de Canales Digitales",
    subtitle: "Maximiza el potencial de tus plataformas clave",
    problem: "Tus perfiles digitales son tu carta de presentación.",
    content:
      "Optimizamos perfiles en Google Mi Negocio, WhatsApp y más, para fortalecer tu reputación online y facilitar la conversión.",
    image: Optimizacion,
    alt: "optimización de canales digitales",
  },
];
---

<section id="services" class="services-section relative min-h-screen">
  <div class="wrapper w-full h-screen relative">
    <h2
      class="text-center text-smokyBlack font-playfair font-medium text-4xl md:text-5xl lg:text-6xl"
    >
      Nuestros Servicios
    </h2>

    <!-- Indicadores laterales -->
    <div
      class="indicators absolute left-8 top-0 mt-[10vh] hidden h-[80vh] w-1 flex-col justify-between gap-2"
    >
      {
        services.map(() => (
          <div class="indicator w-full grow bg-smokyBlack/30" />
        ))
      }
    </div>

    <!-- Servicios -->
    {
      services.map(
        ({ title, subtitle, problem, content, benefits, image, alt }) => (
          <div class="point flex h-screen w-full flex-col items-center justify-center gap-x-20 gap-y-12 p-16 md:flex-row lg:gap-x-40">
            <div class="w-full max-w-md ">
              <Image
                src={image}
                alt={alt}
                width={500}
                height={500}
                class="w-full h-auto hidden md:block"
              />
            </div>
            <article class="flex flex-col gap-6 max-w-2xl">
              <h3 class="text-softWhite font-playfair text-center md:text-left text-3xl md:text-4xl lg:text-5xl leading-tight tracking-tight">
                {title}
              </h3>
              {subtitle && (
                <h4 class="text-softBeige font-poppins text-center md:text-left text-xl md:text-2xl font-semibold">
                  {subtitle}
                </h4>
              )}
              {problem && (
                <p class="text-softLavender font-openSans font-medium text-[min(5vw,20px)] text-center md:text-left text-lg italic">
                  {problem}
                </p>
              )}
              <p class="text-softBeige/80 font-openSans text-lg md:text-xl leading-relaxed">
                {content}
              </p>
              {benefits && (
                <ul class="flex flex-col gap-2">
                  {benefits.map((benefit) => (
                    <li class="text-softBeige/70 font-medium font-openSans text-base flex items-center gap-3">
                      <span class="w-2 h-2 bg-accentGold rounded-full flex-shrink-0" />
                      {benefit}
                    </li>
                  ))}
                </ul>
              )}
            </article>
          </div>
        )
      )
    }
  </div>
  <Hero />
</section>

<script>
  import { servicesAnimation } from "@/utils/scripts/servicesAnimation.js";

  document.addEventListener("DOMContentLoaded", () => {
    servicesAnimation();
  });
</script>
