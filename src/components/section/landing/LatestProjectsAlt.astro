---
import { getCollection } from "astro:content";
import ProjectCardAlt from "@/components/ui/ProjectCardAlt.astro";
import DiagonalArrow from "@/assets/icons/diagonalArrow.svg";
import Star from "@/assets/icons/star40x40black.svg";
import Button from "@/components/ui/button.astro";

const allworks = await getCollection("works");
const sortedWorks = allworks.sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime(),
);
---

<section
  class="projects-section relative section w-full bg-softWhite px-4 py-16 md:px-0"
>
  <!-- Title - Mobile only -->
  <div class="flex flex-col items-center justify-center text-center gap-4 mb-8">
    <div class="flex items-center">
      <Button
        variant="optional"
        animation={true}
        className="py-1 px-4 rounded-4xl"
      >
        Clientes
        <Star class="star w-9 h-9" />
      </Button>
    </div>
    <h1 class="text-smokyBlack font-playfair font-medium text-3xl md:hidden">
      Proyectos recientes
    </h1>
  </div>

  <!-- Mobile Cards -->
  <div class="md:hidden">
    {
      sortedWorks.map((project) => (
        <div class="mb-8">
          <div class="bg-softWhite rounded-lg overflow-hidden shadow-lg h-[500px] flex flex-col">
            <div class="flex-1 p-6 flex items-center justify-center bg-gray-50">
              <div class="w-full max-w-xs">
                <ProjectCardAlt project={project} className="w-full" />
              </div>
            </div>
            <div class="p-6 bg-softWhite">
              <div class="flex justify-between items-baseline mb-4">
                <h2 class="text-smokyBlack font-playfair font-medium text-lg">
                  {project.data.title}
                </h2>
                <span class="text-smokyBlack font-playfair font-bold text-2xl">
                  {project.data.pubDate.getFullYear()}
                </span>
              </div>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.data.stack.map((tech) => (
                  <span class="tags rounded-2xl bg-accentGold px-2 text-sm">
                    {tech}
                  </span>
                ))}
              </div>
              <div class="h-2 flex mb-4">
                <div class="bg-salviaGreen w-1/2 h-full" />
                <div class="bg-gray-200 w-1/2 h-full" />
              </div>
              <a
                href={project.data.link}
                target="_blank"
                class="inline-flex items-center gap-2 bg-gray-200 hover:bg-salviaGreen hover:text-softWhite px-4 py-1 rounded transition-colors duration-200 font-openSans text-sm"
              >
                Ver Proyecto
                <DiagonalArrow />
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </div>

  <!-- Desktop Horizontal Scroll -->
  <div
    class="projects-wrapper hidden md:block bg-smokyBlack w-full h-[calc(100vh-8rem)] p-8 relative"
  >
    <div
      class="desktop-title hidden md:flex absolute top-8 left-1/2 transform -translate-x-1/2 z-10 items-center justify-center mb-8"
    >
      <h1 class="text-smokyBlack font-playfair font-bold text-6xl">
        Proyectos recientes
      </h1>
    </div>
    <div
      class="projects-container flex rounded-lg w-[80vw] mx-auto bg-softBeige h-full items-center overflow-hidden relative"
    >
      <div class="projects-inner flex mt-20">
        {
          sortedWorks.map((project, index) => (
            <div
              class="project-card w-[80vw] flex-shrink-0 flex flex-col items-center justify-center"
              data-project-title={project.data.title}
              data-project-year={project.data.pubDate.getFullYear()}
              data-project-link={project.data.link}
              data-project-index={index}
            >
              <ProjectCardAlt project={project} className="flex-shrink-0" />
              <div class="flex gap-4 mb-4">
                {project.data.stack.map((tech) => (
                  <span class="tags rounded-2xl bg-accentGold/70 px-2 py-1 text-sm text-center">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          ))
        }
      </div>

      <!-- Project Info Overlay -->
      <div
        class="project-info-overlay flex flex-col gap-8 absolute bottom-0 right-0 bg-smokyBlack/80 z-50 transition-opacity duration-300 overflow-hidden"
        style="width: 0%; opacity: 1;"
      >
        <div class="flex items-center justify-between p-2">
          <h2
            class="text-softWhite font-playfair font-semibold text-xl mb-2"
            id="overlay-title"
          >
            {sortedWorks[0]?.data.title}
          </h2>
          <span
            class="text-softWhite font-playfair font-bold text-5xl"
            id="overlay-year"
          >
            {sortedWorks[0]?.data.pubDate.getFullYear()}
          </span>
        </div>
        <div>
          <div class="h-4 flex">
            <div class="bg-salviaGreen w-1/2 h-full"></div>
            <div class="bg-gray-200 w-1/2 h-full"></div>
          </div>
          <a
            href={sortedWorks[0]?.data.link}
            target="_blank"
            id="overlay-link"
            class="flex items-center text-smokyBlack text-semibold font-openSans justify-end gap-2 bg-softBeige px-4 py-2 hover:font-bold transition-all duration-200"
          >
            Ver Proyecto
            <DiagonalArrow />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { latestProjectsAltAnimation } from "@/utils/scripts/latestProjectsAltAnimation.js";

  document.removeEventListener("DOMContentLoaded", latestProjectsAltAnimation);
  document.addEventListener("DOMContentLoaded", latestProjectsAltAnimation);
</script>
