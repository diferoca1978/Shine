<section class="w-full mx-auto">
    <div class="max-w-7xl mx-auto px-4 py-16 md:py-24">
        <div
            class="flex flex-col items-center justify-center min-h-[70vh] text-center"
        >
            <div class="max-w-4xl">
                <h1
                    class="text-[min(10vw,72px)] font-playfair font-medium text-smokyBlack leading-tight tracking-tight mb-6"
                >
                    Haz que tu luz brille
                </h1>
                <h2
                    class="text-[min(5vw,42px)] font-playfair italic text-smokyBlack mb-6"
                >
