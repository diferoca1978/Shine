---
import InteractiveMouse from "@/components/ui/InteractiveMouse.astro";
import Button from "@/components/ui/button.astro";
import StarIcon from "@/assets/icons/star40x40.svg";

const { class: className } = Astro.props;
---

<section class:list={["section hero-section w-full mx-auto", className]}>
    <div class="max-w-7xl mx-auto px-4 py-8 md:py-12 lg:py-20">
        <div
            class="flex flex-col items-center justify-center min-h-[60vh] md:min-h-[70vh] text-center"
        >
            <div class="max-w-4xl">
                <h1
                    class="text-[min(10vw,72px)] font-playfair font-medium text-smokyBlack leading-tight tracking-tight mb-6"
                >
                    Haz que tu luz brille
                </h1>
                <h2
                    class="text-[min(5vw,42px)] font-playfair italic text-smokyBlack mb-6"
                >
                    Atrae a quienes necesitan tu <span
                        class="font-bold text-deepplum">talento</span
                    >
                </h2>

                <p
                    class="text-[min(5vw,24px)] font-openSans text-smokyBlack mb-8 max-w-2xl mx-auto"
                >
                    Construimos tu presencia digital con estrategia y
                    <span class="block"> propósito </span>
                </p>

                <div class="flex justify-center mb-4">
                    <Button
                        href="/servicios"
                        type="button"
                        className="py-2"
                        variant="primary"
                    >
                        Conoce nuestros servicios
                        <StarIcon class="star w-8 h-8" />
                    </Button>
                </div>
                <InteractiveMouse text="¡Hay más, desliza hacia abajo!" />
            </div>
        </div>
    </div>
</section>
